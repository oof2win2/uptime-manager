{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        ".vscode",
        ".git"
    ],
    "watch": ["src/", "config.ts"],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,mjs,json,ts,mts",
    "cwd": "./src/",
	"exec": "ts-node --transpile-only src/index.ts"
}